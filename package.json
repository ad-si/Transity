{
  "name": "transity",
  "description": "Keep track of your 💵, 🕘, 🐖, 🐄, 🍻 or anything else.",
  "version": "0.8.0",
  "main": "output/Main/index.js",
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "bin": {
    "transity": "cli/main.js"
  },
  "scripts": {
    "minify": "uglifyjs --compress --mangle --output index.js index.js",
    "bundle": "spago bundle-module --platform=node && npm run minify",
    "prepublishOnly": "npm test && npm run bundle",
    "test": "spago test && npm run lint-js",
    "lint-js": "eslint --max-warnings=0 --ignore-path=.gitignore scripts"
  },
  "directories": {
    "test": "tests"
  },
  "files": [
    "index.js",
    "/scripts",
    "!.DS_Store"
  ],
  "keywords": [
    "accounting",
    "cli",
    "command-line-tool",
    "ledger",
    "money",
    "plaintext-accounting",
    "purescript",
    "tui"
  ],
  "author": "Adrian Sieber",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://github.com/feramhq/transity.git"
  },
  "dependencies": {
    "@swc/helpers": "^0.3.13",
    "archiver": "^5.3.1",
    "big-integer": "^1.6.51",
    "chrono-node": "^2.3.8",
    "csvnorm": "^1.1.0",
    "js-yaml": "^4.1.0"
  },
  "optionalDependencies": {
    "converter": "0.0.5",
    "inquirer": "^8.2.4",
    "nightmare": "^3.0.2",
    "nightmare-inline-download": "^0.2.2",
    "tempy": "^3.0.0"
  },
  "devDependencies": {
    "conventional-changelog-cli": "^2.2.2",
    "cssnano": "^5.1.7",
    "esbuild": "^0.14.39",
    "eslint": "^8.15.0",
    "eslint-config-javascript": "^2.0.0",
    "markdown-toc": "^1.2.0",
    "parcel": "^2.5.0",
    "purescript": "^0.15.0",
    "spago": "^0.20.9",
    "uglify-js": "^3.15.5"
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": "2022"
    },
    "extends": "eslint-config-javascript"
  },
  "targets": {
    "docs": {
      "distDir": "docs"
    },
    "docs-dev": {
      "distDir": "docs-dev"
    },
    "library": {
      "distDir": "."
    }
  }
}
